  "scripts": {
    "test": "jest",
    "start": "ts-node src/index.ts",
    "start:watch": "nodemon ./src/index.ts",
    "start:debug": "node --inspect=5858 -r ts-node/register ./src/index.ts",
    "start:debug:watch": "nodemon --inspect=5858 ./src/index.ts",
    "start:docker": "docker run --add-host host.docker.internal:host-gateway -p 3001:3001 --name=dev-rederly-core-backend --rm -it $(docker build -q .)",
    "start:docker:limited": "docker run --env NODE_OPTIONS='--max-old-space-size=2048' --cpus=1 --memory=2g --add-host host.docker.internal:host-gateway -p 3001:3001 --name=dev-rederly-core-backend --rm -it $(docker build -q .)",
    "cli": "ts-node ./src/cli.ts",
    "cli:built": "node ./ts-built/cli.js",
    "cli:debug": "node --inspect=5859 -r ts-node/register ./src/cli.ts",
    "cli:debug:watch": "nodemon --inspect=5859 ./src/cli.ts",
    "play": "ts-node src/playground/playground.ts",
    "play:debug": "node --inspect=5860 -r ts-node/register ./src/playground/playground.ts",
    "play:debug:watch": "nodemon --inspect=5860 ./src/playground/playground.ts",
    "generate-route-types": "ts-node ./utility-scripts/generate-route-types.ts",
    "build": "npm run clean && tsc",
    "build:run": "npm run build && npm run run:build",
    "run:build": "node ts-built/index.js",
    "sequelize": "npm run build && sequelize",
    "sequelize:migrations": "npm run sequelize -- db:migrate",
    "sequelize:migrations:devundo": "npm run sequelize -- db:migrate:undo:all --to 20210608181809-superadmin.js",
    "sequelize:built:migrations": "sequelize -- db:migrate",
    "lint": "eslint src/ --ext .ts",
    "clean": "node ./utility-scripts/clean.js",
    "package": "node ./utility-scripts/package.js",
    "build:package": "npm run build && npm run package"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      "node_modules/**/node_modules/**",
      "node_modules/@rederly/**/src/**"
    ],
    "ignoreRoot": [
      ".git",
      "public"
    ],
    "watch": [
      "src",
      "node_modules/@rederly"
    ],
    "ext": "ts",
    "execMap": {
      "ts": "node --require ts-node/register"
    },
    "signal": "SIGINT"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rederly/backend.git"
